{
  "name": "@cdm-logger/server",
  "version": "9.0.13",
  "description": "Universal - Logger",
  "main": "./lib/index.js",
  "type": "module",
  "typings": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./moleculer": {
      "types": "./lib/moleculer.d.ts",
      "import": "./lib/moleculer/index.js",
      "require": "./lib/moleculer/index.cjs",
      "default": "./lib/moleculer/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublish": "yarn build",
    "build": "yarn build:clean && yarn build:lib && yarn build:types",
    "build:clean": "rimraf lib",
    "build:lib": "rollup -c rollup.config.mjs",
    "build:types": "tsc --emitDeclarationOnly",
    "jest": "../../node_modules/.bin/jest",
    "test": "vitest",
    "test:debug": "npm test -- --runInBand",
    "test:watch": "npm test -- --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pino",
    "logger"
  ],
  "author": "CDMBase LLC",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "/__tests__/.*test*\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "node_modules/(@cdm-logger/core)/.+\\.(j|t)sx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@cdm-logger/core)/"
    ]
  },
  "dependencies": {
    "@cdm-logger/core": "link:../core",
    "bunyan": "^1.8.15",
    "pino": "~9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "homepage": "https://github.com/cdmbase/cdm-logger",
  "repository": {
    "type": "git",
    "url": "git://git@github.com:cdmbase/cdm-logger.git"
  },
  "bugs": {
    "url": "https://github.com/cdmbase/cdm-logger/issues"
  },
  "gitHead": "0394aed3d9235b51469fff3ae9c1b769ea0a11e3",
  "peerDependencies": {
    "moleculer": ">=0.14.0"
  },
  "devDependencies": {
    "moleculer": "^0.14.35"
  }
}
