{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@cdm-logger/server": ["./src/index"],
      "@cdm-logger/server/moleculer": ["./src/adapters/cdm-moleculer-adapter"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "src/**/*.spec.ts", "src/**/*.test.ts"]
}